# Educational Chatbot - Environment Configuration
# Copy this file to .env and update the values for your local development

# === Application Environment ===
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# === Frontend Configuration ===
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
CHOKIDAR_USEPOLLING=true

# === Backend Configuration ===
PYTHONPATH=/app
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# === Database Configuration ===
POSTGRES_DB=educational_chatbot
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=chatbot_pass
DATABASE_URL=postgresql://chatbot_user:chatbot_pass@postgres:5432/educational_chatbot

# === Redis Configuration ===
REDIS_URL=redis://redis:6379/0

# === Security & CORS ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SECRET_KEY=your_secret_key_for_development_only

# === File Upload & Storage ===
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/app/data/uploads
FAISS_INDEX_PATH=/app/data/faiss_index

# === Development Tools (set to 'true' to enable) ===
ENABLE_DEV_TOOLS=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true

# === Port Configuration ===
FRONTEND_PORT=3000
BACKEND_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
